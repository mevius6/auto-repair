mixin items(arr)
  - let num = arr.length;
  each item, index in arr
    if item.phone || item.mail || item.href
      li
        +link({
          base: 'list',
          phone: item.phone,
          mail: item.mail,
          href: item.href,
          icon: item.icon,
        })
    else if item.cost
      -
        const currency = new Intl.NumberFormat('ru', {
          style: 'currency',
          currency: 'RUB',
          currencyDisplay: 'narrowSymbol', // symbol
          maximumSignificantDigits: 3
        })
      li.price
        | #{item.text}
        | #[br]
        if typeof item.cost !== 'number'
          | #{currency.format(item.cost[0])} / #{currency.format(item.cost[1])}
        else
          | #{currency.format(item.cost)}
    else
      if item.icon
        li&attributes({'data-icon': item.icon})
          | #{item.text}
      else
        li= item.text

mixin list(props)
  if props.title
    h4.subhead= props.title
  if props.ordered
    ol.body(
      role="list"
      reversed= props.reversed
      start= props.start
      type= props.type
    )
      +items(props.items)
  else
    ul.body(role="list")&attributes(attributes)
      +items(props.items)
